<?xml version="1.0"  encoding="UTF-8"?>


<root>


	<server id="chatserver0" name="Server" uripath="/{userId}/{sessionId}/{params}" />

	<engine id="netty0" name="Netty" port="9000" class="net.ion.websocket.server.engine.netty.NettyEngine">
		<domain>localhost</domain>
		<max-frame-size>16384</max-frame-size>
	</engine>


	<context>
		<attribute id="my.server.dev">bleujin@i-on.net</attribute>

		<configured-object id="my.index.count" scope="application">
			<class-name>java.lang.Integer</class-name>
			<constructor>
				<constructor-param>
					<description>test integer</description>
					<type>int</type>
					<value>45</value>
				</constructor-param>
			</constructor>
		</configured-object>
		
	</context>

	<filters>
	</filters>

	<plugins>
		<plugin name="chat">
			<description />
			<configured-object>
				<class-name>net.ion.websocket.plugin.chat.AllBroadCastPlugIn</class-name>
			</configured-object>
		</plugin>

		<plugin name="log">
			<description />
			<configured-object>
				<class-name>net.ion.websocket.plugin.chat.LogPlugIn</class-name>
			</configured-object>
		</plugin>
	</plugins>


	<listeners>
		<listener name="debug">
				<description />
				<configured-object>
					<class-name>net.ion.websocket.common.listener.DebugListener</class-name>
				</configured-object>
		</listener>
	</listeners>

</root>