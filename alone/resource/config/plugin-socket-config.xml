<?xml version="1.0"  encoding="UTF-8"?>

<root>

	<section name="monitor">
		<path name="default">
			<urls>/</urls>
			<description>Default</description>
			<handler class="net.ion.radon.impl.let.HelloWorldLet" scope="request" />
		</path>
		
		<path name="favicon.ico">
			<context>
				<attribute id="base.dir">./resource/favicon.ico</attribute>
			</context>
			<urls>/favicon.ico</urls>
			<handler class="net.ion.radon.impl.let.DirLet" scope="request" />
		</path>
	</section>


	<context>
		<configured-object id="system.websocket.server" scope="application">
			<class-name>net.ion.websocket.server.ServerRunner</class-name>
			<constructor>
				<constructor-param>
					<description>config path</description>
					<type>java.lang.String</type>
					<value>${BASEPATH}/aradon-websocket-server-config.xml</value>
				</constructor-param>
			</constructor>
			<call method="start" />			
		</configured-object>
		
		<attribute id="let.contact.email">bleujin@i-on.net</attribute>
		<attribute id="let.contact.help.doc">/help/doc</attribute>
	</context>
		
</root>