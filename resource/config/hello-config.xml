<?xml version="1.0"  encoding="UTF-8"?>


<root>


	<engine id="toon0" name="ToonZero" port="8787"  uripath="/{$serviceName}/{$userId}/{$authId}"/>


	<context>
		<attribute id="my.server.dev">bleujin@i-on.net</attribute>

		<configured-object id="my.index.count" scope="application">
			<class-name>java.lang.Integer</class-name>
			<constructor>
				<constructor-param>
					<description>test integer</description>
					<type>int</type>
					<value>45</value>
				</constructor-param>
			</constructor>
		</configured-object>
		
		<configured-object id="my.sb.application" scope="application">
			<class-name>java.lang.StringBuffer</class-name>
			<constructor>
				<constructor-param>
					<description>test StringBuffer</description>
					<type>java.lang.String</type>
					<value>Hello</value>
				</constructor-param>
			</constructor>
		</configured-object>

		<configured-object id="my.sb.request" scope="request">
			<class-name>java.lang.StringBuffer</class-name>
			<constructor>
				<constructor-param>
					<description>test StringBuffer</description>
					<type>java.lang.String</type>
					<value>Hello</value>
				</constructor-param>
			</constructor>
		</configured-object>
		
		
	</context>

	<filters>
	</filters>

	<plugins>
		<plugin name="chat">
			<description />
			<configured-object>
				<class-name>net.ion.toon.impl.plugin.AllBroadCastPlugIn</class-name>
			</configured-object>
		</plugin>

		<plugin name="log">
			<description />
			<configured-object>
				<class-name>net.ion.toon.impl.plugin.LogPlugIn</class-name>
			</configured-object>
		</plugin>
	</plugins>


	<listeners>
		<listener name="debug">
				<description />
				<configured-object>
					<class-name>net.ion.toon.impl.listener.DebugListener</class-name>
				</configured-object>
		</listener>
	</listeners>

</root>