<?xml version="1.0"  encoding="UTF-8"?>

<root>
	<engine id="toon0" name="ToonZero" port="8787"  uripath="/{$serviceName}/{$topicId}/{$userId}/{$authId}"/>

	<section name="aradon">
		<path name="default">
			<context>
				<attribute id="net.ion.chat.aradon.IndexHtmlLet">./resource/config/embed-index.html</attribute>
			</context>
			<urls>/</urls>
			<description>Default</description>
			<handler class="net.ion.chat.aradon.IndexHtmlLet" scope="request" />
		</path>

		<path name="monitor">
			<urls>/monitor, /monitor/{userId}</urls>
			<description>Default</description>
			<handler class="net.ion.chat.aradon.SampleMonitorLet" scope="request" />
		</path>
		
		<path name="suicide">
			<urls>/shutdown</urls>
			<prefilter class="net.ion.chat.aradon.RefererAllowFilter" />
			<handler class="net.ion.chat.aradon.SuicideLet" scope="request" />
		</path>
	
		<path name="client">
			<context>
				<attribute id="net.ion.chat.aradon.ClientLet">./resource/toonweb/chat.tpl</attribute>
			</context>
			<urls>/client/{topicId}/{userId}</urls>
			<desciption></desciption>
			<handler class="net.ion.chat.aradon.ClientLet" />
		</path>

		<path name="event">
			<context>
				<attribute id="net.ion.toon.aradon.EventLet">./resource/toonweb/event.tpl</attribute>
			</context>
			<urls>/event/{userId}</urls>
			<desciption></desciption>
			<handler class="net.ion.chat.aradon.EventLet" />
		</path>


		<path name="trace">
			<urls>/trace/{userId}</urls>
			<desciption></desciption>
			<handler class="net.ion.chat.aradon.TraceLet" />
		</path>
	
	</section>

	<context>
		<attribute id="let.contact.email">bleujin@gmail.com</attribute>
		<attribute id="let.contact.help.doc">/help/doc</attribute>
		<attribute id="my.server.dev">bleujin@gmail.com</attribute>


	</context>

	<server-config id="jupiter">
		<!-- System.setProperty("java.util.logging.config.file", "./resource/config/myLogging.properties") ; -->
		<log-config-file>./resource/config/log4j.properties</log-config-file>
	</server-config>

	<filters>
	</filters>

	<plugin includepath="./plugin/;" />

	<plugins>
		<plugin name="session">
			<description>set userbean</description>
			<configured-object>
				<class-name>net.ion.chat.impl.plugin.SessionAuthPlugIn</class-name>
			</configured-object>
		</plugin>
		
		<plugin name="chat">
			<description>broadcast per room</description>
			<configured-object>
				<class-name>net.ion.chat.impl.plugin.RoomBroadCastPlugIn</class-name>
			</configured-object>
		</plugin>
		
	</plugins>


	<listeners>
		<listener name="debug">
			<description />
			<configured-object>
				<class-name>net.ion.chat.impl.listener.DebugListener</class-name>
			</configured-object>	
		</listener>
	</listeners>

</root>