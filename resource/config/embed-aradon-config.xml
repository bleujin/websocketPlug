<?xml version="1.0"  encoding="UTF-8"?>

<root>
	<!-- 
		WebSocketNode에 각각 Embed 되어 있는 AradonConfig.	
	 -->

	<section name="">
		<path name="default">
			<urls>/</urls>
			<description>Default</description>
			<handler class="net.ion.radon.impl.let.HelloWorldLet" scope="request" />
		</path>

		
		<path name="monitor">
			<urls>/monitor, /monitor/{userId}</urls>
			<description>Default</description>
			<handler class="net.ion.websocket.aradon.embed.SampleMonitorLet" scope="request" />
		</path>
		
		<path name="suicide">
			<urls>/shutdown</urls>
			<prefilter class="net.ion.websocket.aradon.embed.RefererAllowFilter">
			<configured-object>
					<class-name>net.ion.websocket.aradon.embed.RefererAllowFilter</class-name>
					<constructor>
						<constructor-param>
							<description>allow client ip</description>
							<type>java.lang.String</type>
							<value>localhost\,127.0.0.1</value>
						</constructor-param>
					</constructor>
				</configured-object>
			</prefilter>
			<handler class="net.ion.websocket.aradon.embed.SuicideLet" scope="request" />
		</path>
		
	</section>
	
	<context>
		<attribute id="let.contact.email">bleujin@i-on.net</attribute>
		<attribute id="let.contact.help.doc">/help/doc</attribute>
	</context>

	<plugin includepath="plugin/;lib/;">
		
	</plugin>
	
</root>